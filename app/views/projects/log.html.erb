<% if !@tasks.blank? %>
<ul class="log item_list">
  <% for task in @tasks %>
  <li>
    <span class="hours"><%= task.hours %>h</span>
    <span class="name"><%= task.name %></span>
    <span class="date"><%= task.completed_on.strftime("%m/%d/%y") %></span>
  </li>
  <% end %>
</ul>
<% else %>
  <p>No time logged for this project.</p>
<% end %>
