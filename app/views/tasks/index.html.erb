<article class="description">
<p><%= @feature.description %></p>
</article>
<ul class="tasks item_list">
<% @tasks.each do |task| %>
  <li class="<%= "completed" if task.completed? %>">
    <ul class="item_detail">
      <li class="item_name"><%= link_to task.name, edit_feature_task_path(@feature,task) %></li>
      <% if task.completed? %><li class="item_hours"><%= task.hours %></li><% end %>
    </ul>
  </li>
<% end %>
</ul>